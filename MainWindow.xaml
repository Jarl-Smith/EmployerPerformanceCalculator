<Window x:Class="EmployerPerformanceCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployerPerformanceCalculator"
        mc:Ignorable="d"
        Title="员工考核计算器" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="320"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="stackPanel1" Orientation="Horizontal" FlowDirection="LeftToRight" Grid.Row="0">
            <Label Content="请选择员工考核表格:"/>
            <StackPanel Width="240">
                <Button x:Name="btn1" Content="选择文件" Width="70"/>
                <TextBlock x:Name="tbk1" TextWrapping="Wrap"/>
            </StackPanel>
            <Label Content="请选择考核得分表格:"/>
            <StackPanel Width="240">
                <Button x:Name="btn2" Content="选择文件" Width="70"/>
                <TextBlock x:Name="tbk2" TextWrapping="Wrap"/>
            </StackPanel>
        </StackPanel>
        <StackPanel x:Name="stackPanel2" Grid.Row="1">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Label>123456</Label>
                    <Label>123456</Label>
                    <Label>123456</Label>
                    <Label>123456</Label>
                    <Label>123456</Label>
                    <Label>123456</Label>
                    <Label>123456</Label>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
        <WrapPanel x:Name="wrapPanel" HorizontalAlignment="Center" Grid.Row="2">
            <Button Content="计算考核" Click="performance_Button_Click" Width="80" Height="20"/>
        </WrapPanel>
    </Grid>
</Window>
